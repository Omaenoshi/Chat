@using Chat.Api.Pages.Shared
@model Chat.Api.Pages.Shared.IndexModel

@{

}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Чат-комнаты</title>
    <style>
            /* Общие стили */
            * {
                box-sizing: border-box;
                font-family: Arial, sans-serif;
            }

            body {
                background-color: #f2f2f2;
            }

            /* Стили списка комнат */
            .room-list {
                max-width: 500px;
                margin: 50px auto;
                background-color: #fff;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            }

            .room-list h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .room-list ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

            .room-list ul li {
                border-bottom: 1px solid #ccc;
                padding: 12px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .room-list ul li:last-child {
                border-bottom: none;
            }

            .room-list ul li a {
                text-decoration: none;
                color: #000;
            }

            .room-list ul li a:hover {
                color: #2E8B57;
            }

            .join-button {
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                padding: 8px 16px;
                font-size: 14px;
            }

            .join-button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="room-list">
        <h2>Чат-комнаты</h2>
        <ul>
            @foreach (var chatRoom in IndexModel.Rooms)
            {
                <li>
                    <h4>@chatRoom.Title</h4>
                    <span>Количество участников: @chatRoom.Users.Count</span>
                    <button class="join-button">Присоединиться</button>
                </li>
            }
        </ul>
    </div>
</body>
</html>
